{{#primary_author}}

<section class="media author-card">
  <figure class="media-left">
    {{> "author-avatar"}}
  </figure>

  <div class="media-content">
    <div class="content">
      <h4 class="author-card-name">{{name}}</h4>
      {{#if bio}}
          {{bio}}
      {{else}}
          Read <a href="{{url}}">more posts</a> by this author.
      {{/if}}
    </div>
  </div>
</section>

{{/primary_author}}
